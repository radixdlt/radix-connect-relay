image: 
    tag: {{ .StateValues.ci.tag }}

params:
  REDIS_HOST: radix-connect-relay-dev-redis.rdx-works-main.internal
  REDIS_PORT: 6379
  REDIS_PASSWORD: 
  REDIS_CLUSTER_MODE: enabled
  PORT: 3000
  INTERNAL_PORT: 3001

secrets:
  - external_secret_name: postgres
    env_variable: "DATABASE_URL"
    aws_secret_name: "rdx-works-main-dev/eks/radix-connect-relay/dev/postgres"
    aws_secret_key: "database-url"
    secret_key: "database-url"

ingress:
  enabled: true
  hosts:
    - host: radix-connect-relay-dev.rdx-works-main.extratools.works
      paths:
        - path: /
          pathType: ImplementationSpecific

resources:
  requests:
    cpu: 50m
    memory: 1Gi
  limits:
    memory: 1Gi
