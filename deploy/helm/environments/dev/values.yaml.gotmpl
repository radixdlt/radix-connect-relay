image: 
    tag: {{ .StateValues.ci.tag }}

params:
  REDIS_HOST: radix-connect-relay-dev-redis.rdx-works-main.internal
  REDIS_PORT: 6379
  REDIS_PASSWORD: 
  REDIS_CLUSTER_MODE: enabled
  PORT: 3000
  INTERNAL_PORT: 3001
  POSTGRES_DATABASE: radix_connect_relay
  POSTGRES_HOST: radix-connect-relay-dev.cluster-cd2yqpprgk5z.eu-west-2.rds.amazonaws.com
  POSTGRES_PORT: 5432

secrets:
  - external_secret_name: postgres-user
    env_variable: "POSTGRES_USER"
    aws_secret_name: "rdx-works-main-dev/eks/radix-connect-relay/dev/postgres"
    aws_secret_key: "postgresqlUsername"
    secret_key: "postgres-user"
  - external_secret_name: postgres-password
    env_variable: "POSTGRES_PASSWORD"
    aws_secret_name: "rdx-works-main-dev/eks/radix-connect-relay/dev/postgres"
    aws_secret_key: "postgresql-password"
    secret_key: "postgresql-password"

ingress:
  enabled: true
  hosts:
    - host: radix-connect-relay-dev.rdx-works-main.extratools.works
      paths:
        - path: /
          pathType: ImplementationSpecific

resources:
  requests:
    cpu: 50m
    memory: 1Gi
  limits:
    memory: 1Gi
