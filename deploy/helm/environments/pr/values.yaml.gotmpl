image: 
    tag: {{ .StateValues.ci.tag }}

params:
  REDIS_HOST: redis-master
  REDIS_PORT: 6379
  REDIS_PASSWORD: 
  REDIS_CLUSTER_MODE: disabled
  PORT: 3000
  INTERNAL_PORT: 3001
  POSTGRES_DATABASE: radix_connect_relay
  POSTGRES_HOST: postgres-postgresql
  POSTGRES_USER: postgres
  POSTGRES_PASSWORD: postgres
  POSTGRES_PORT: 5432

ingress:
  enabled: true
  hosts:
    - host: radix-connect-relay-pr-{{ .StateValues.ci.prNumber }}.rdx-works-main.extratools.works
      paths:
        - path: /
          pathType: ImplementationSpecific

resources:
  requests:
    cpu: 50m
    memory: 128Mi
  limits:
    memory: 128Mi
